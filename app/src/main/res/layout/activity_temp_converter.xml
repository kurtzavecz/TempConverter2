<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zavecz.tempconverter.TempConverterActivity">

    <TextView
        android:id="@+id/mFahrenhietTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Fahrenhiet"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/mDegreesTV"
        android:layout_toStartOf="@+id/mFarenhietET"
        android:layout_marginEnd="27dp" />

    <TextView
        android:id="@+id/mDegreesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Degrees"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/mCelciusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mFahrenhietTV"
        android:layout_below="@+id/mFarenhietET"
        android:layout_marginTop="14dp"
        android:text="Celcius"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mCelciusConvertedTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mCelciusTV"
        android:layout_alignBottom="@+id/mCelciusTV"
        android:layout_alignStart="@+id/mFarenhietET"
        android:text="0.00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/mFarenhietET"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/mDegreesTV"
        android:layout_alignTop="@+id/mFahrenhietTV"
        android:ems="10"
        android:text=""
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
